<launch>

	<arg name="marker_size" default="1.8" /> <!-- 6.1 -->
	<arg name="max_new_marker_error" default="0.08" />
	<arg name="max_track_error" default="0.2" />

	<arg name="cam_image_topic" default="camera/depth_registered/points" />
	<arg name="cam_info_topic" default="camera/color/camera_info" />
	<arg name="output_frame" default="camera_link" />

	<arg name="med_filt_size" default="10" />
	<arg name="bundle_files" default="$(find snu_doosan)/bundles/bundles_test.xml" />

	<node name="ar_track_alvar" pkg="ar_track_alvar" type="findMarkerBundles" respawn="false" output="screen" 
          args="$(arg marker_size) 
                $(arg max_new_marker_error) 
                $(arg max_track_error) 
                $(arg cam_image_topic)
                $(arg cam_info_topic) 
                $(arg output_frame) 
                $(arg med_filt_size) 
                $(arg bundle_files)">
    </node>

</launch>